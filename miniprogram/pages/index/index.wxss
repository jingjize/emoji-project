/* pages/index/index.wxss */

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
}

.upload-area {
  border: 4rpx dashed #667eea;
  border-radius: 30rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  background: #f8f9ff;
  margin-bottom: 30rpx;
  min-height: 400rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.preview-image {
  width: 100%;
  max-height: 600rpx;
  border-radius: 20rpx;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.upload-icon {
  font-size: 96rpx;
  margin-bottom: 20rpx;
}

.upload-text {
  display: block;
  color: #667eea;
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.upload-hint {
  display: block;
  color: #999;
  font-size: 24rpx;
}

.file-info {
  background: #f5f5f5;
  padding: 20rpx;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  font-size: 24rpx;
  color: #666;
}

.emotion-selector {
  margin: 30rpx 0;
}

.emotion-label {
  display: block;
  font-size: 26rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.emotion-buttons {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  margin: 0 -6rpx;
}

.emotion-btn {
  width: calc(33.333% - 12rpx);
  padding: 16rpx 12rpx;
  margin: 0 6rpx 12rpx 6rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 30rpx;
  background: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 4rpx;
  transition: all 0.3s;
  box-sizing: border-box;
  position: relative;
}

.emotion-btn.active {
  border-color: #667eea;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  transform: scale(1.08);
  z-index: 1;
}

.emotion-btn.active {
  border-color: #667eea;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.emotion-icon {
  font-size: 32rpx;
  line-height: 1;
}

.emotion-text {
  font-size: 22rpx;
  color: #666;
  line-height: 1;
}

.emotion-btn.active .emotion-text {
  color: white;
  font-weight: 500;
}

.text-input-area {
  margin: 40rpx 0;
}

.text-input-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.text-input {
  width: 100%;
  min-height: 80rpx;
  padding: 20rpx 24rpx;
  border: 4rpx solid #e0e0e0;
  border-radius: 20rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  box-sizing: border-box;
  background: white;
}

.text-input-hint {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 样式设置区域 */
.style-section {
  margin: 30rpx 0;
  border: 2rpx solid #e0e0e0;
  border-radius: 20rpx;
  background: #f9f9f9;
  overflow: hidden;
}

.style-section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  background: white;
  border-bottom: 2rpx solid #e0e0e0;
}

.style-section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.style-section-arrow {
  font-size: 24rpx;
  color: #999;
}

.style-section-content {
  padding: 30rpx;
}

.style-row {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  gap: 20rpx;
}

.style-row:last-child {
  margin-bottom: 0;
}

.style-label {
  font-size: 26rpx;
  color: #666;
  min-width: 140rpx;
}

.style-picker {
  flex: 1;
  padding: 20rpx 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  background: white;
  font-size: 26rpx;
  color: #333;
}

.color-picker-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.color-preview {
  width: 60rpx;
  height: 60rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.color-input {
  flex: 1;
  padding: 20rpx 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  background: white;
  font-size: 24rpx;
  color: #333;
}

/* 滤镜按钮 */
.filter-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.filter-btn {
  flex: 1;
  min-width: 140rpx;
  padding: 20rpx 24rpx;
  border: 4rpx solid #e0e0e0;
  border-radius: 40rpx;
  background: white;
  text-align: center;
  transition: all 0.3s;
}

.filter-btn.active {
  border-color: #667eea;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.filter-text {
  font-size: 24rpx;
  color: #666;
}

.filter-btn.active .filter-text {
  color: white;
}

.generate-btn {
  width: 100%;
  padding: 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 500;
  margin-top: 30rpx;
}

.generate-btn.disabled {
  background: #ccc;
  color: #999;
}

.loading {
  text-align: center;
  padding: 40rpx;
  margin-top: 30rpx;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 8rpx solid #f3f3f3;
  border-top: 8rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  color: #667eea;
  font-size: 28rpx;
}

.error {
  background: #fee;
  color: #c33;
  padding: 30rpx;
  border-radius: 20rpx;
  margin-top: 30rpx;
  font-size: 28rpx;
}

.result-area {
  margin-top: 40rpx;
  text-align: center;
}

.result-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
}

.result-image {
  width: 100%;
  max-height: 800rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.action-btn {
  width: 100%;
  padding: 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 500;
  margin-top: 20rpx;
}

.action-btn.secondary {
  background: #999;
}

