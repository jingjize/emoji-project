/* pages/index/index.wxss */

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
}

.upload-area {
  border: 4rpx dashed #667eea;
  border-radius: 30rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  background: #f8f9ff;
  margin-bottom: 30rpx;
  min-height: 400rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.preview-image {
  width: 100%;
  max-height: 600rpx;
  border-radius: 20rpx;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.upload-icon {
  font-size: 96rpx;
  margin-bottom: 20rpx;
}

.upload-text {
  display: block;
  color: #667eea;
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.upload-hint {
  display: block;
  color: #999;
  font-size: 24rpx;
}

.file-info {
  background: #f5f5f5;
  padding: 20rpx;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  font-size: 24rpx;
  color: #666;
}

.emotion-selector {
  margin: 40rpx 0;
}

.emotion-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.emotion-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.emotion-btn {
  flex: 1;
  min-width: 160rpx;
  padding: 20rpx 30rpx;
  border: 4rpx solid #e0e0e0;
  border-radius: 40rpx;
  background: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.3s;
}

.emotion-btn.active {
  border-color: #667eea;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.emotion-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.emotion-text {
  font-size: 24rpx;
  color: #666;
}

.emotion-btn.active .emotion-text {
  color: white;
}

.generate-btn {
  width: 100%;
  padding: 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 500;
  margin-top: 30rpx;
}

.generate-btn.disabled {
  background: #ccc;
  color: #999;
}

.loading {
  text-align: center;
  padding: 40rpx;
  margin-top: 30rpx;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 8rpx solid #f3f3f3;
  border-top: 8rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  color: #667eea;
  font-size: 28rpx;
}

.error {
  background: #fee;
  color: #c33;
  padding: 30rpx;
  border-radius: 20rpx;
  margin-top: 30rpx;
  font-size: 28rpx;
}

.result-area {
  margin-top: 40rpx;
  text-align: center;
}

.result-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
}

.result-image {
  width: 100%;
  max-height: 800rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.action-btn {
  width: 100%;
  padding: 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 500;
  margin-top: 20rpx;
}

.action-btn.secondary {
  background: #999;
}

